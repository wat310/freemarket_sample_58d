.single-container
  = render partial:"devise/header"

  %nav.progress-bar.signup-bar
    %ol.clearfix
      %li.through
        会員登録
        %div.progress-status
      %li.through
        電話番号認証
        %div.progress-status
      %li.active
        お届け先住所入力
        %div.progress-status
      %li
        支払い方法
        %div.progress-status
      %li
        完了
        %div.progress-status

  %main.single-main
    %section.l-single-container
      %h2.l-single-head.registration 発送元・お届け先住所入力
      = form_with model: @user, url:step5_signup_index_path, method: :get, class: 'l-single-inner registration-form', local: true do |f|
        = hidden_field_tag :current_step, 'step4'
        %input{type: "hidden", name: "__csrf_value", value:""}

        = f.fields_for :profile do |f|        
          .l-single-content
            .form-group
              = f.label "お名前" 
              %span.form-require 必須
              = f.text_field :family_name_kanji, autofocus: true,class:"input-default",placeholder: "森田"
              = f.text_field :first_name_kanji, autofocus: true,class:"input-default",placeholder: "大陽"

              = f.label "お名前カナ"
              %span.form-require 必須
              = f.text_field :family_name_kana, autofocus: true,class:"input-default",placeholder: "モリタ"
              = f.text_field :first_name_kana, autofocus: true,class:"input-default",placeholder: "ヒロアキ"

            .form-group
              = f.label "郵便番号"
              %span.form-require 必須
              = f.fields_for :address do |f|
                = f.text_field :postal_code, autofocus: true,class:"input-default",placeholder: "例)123-4567"
    
            .form-group
              = f.label "都道府県"
              %span.form-require 必須
              %select{type: "bigint", name:"prefecture_id", class:"input-default" }
                %option{value:"北海道"} 北海道
                %option{value:"青森県"} 青森県
                %option{value:"岩手県"} 岩手県
                %option{value:"宮城県"} 宮城県
                %option{value:"秋田県"} 秋田県
                %option{value:"山形県"} 山形県
                %option{value:"福島県"} 福島県
                %option{value:"茨城県"} 茨城県
                %option{value:"栃木県"} 栃木県
                %option{value:"群馬県"} 群馬県
                %option{value:"埼玉県"} 埼玉県
                %option{value:"千葉県"} 千葉県
                %option{value:"東京都"} 東京都
                %option{value:"神奈川県"} 神奈川県
                %option{value:"新潟県"} 新潟県
                %option{value:"富山県"} 富山県
                %option{value:"石川県"} 石川県
                %option{value:"福井県"} 福井県
                %option{value:"山梨県"} 山梨県
                %option{value:"長野県"} 長野県
                %option{value:"岐阜県"} 岐阜県
                %option{value:"静岡県"} 静岡県
                %option{value:"愛知県"} 愛知県
                %option{value:"三重県"} 三重県
                %option{value:"滋賀県"} 滋賀県
                %option{value:"京都府"} 京都府
                %option{value:"大阪府"} 大阪府
                %option{value:"兵庫県"} 兵庫県
                %option{value:"奈良県"} 奈良県
                %option{value:"和歌山県"} 和歌山県
                %option{value:"鳥取県"} 鳥取県
                %option{value:"島根県"} 島根県
                %option{value:"岡山県"} 岡山県
                %option{value:"広島県"} 広島県
                %option{value:"山口県"} 山口県
                %option{value:"徳島県"} 徳島県
                %option{value:"香川県"} 香川県
                %option{value:"愛媛県"} 愛媛県
                %option{value:"高知県"} 高知県
                %option{value:"福岡県"} 福岡県
                %option{value:"佐賀県"} 佐賀県
                %option{value:"長崎県"} 長崎県
                %option{value:"熊本県"} 熊本県
                %option{value:"大分県"} 大分県
                %option{value:"宮崎県"} 宮崎県
                %option{value:"鹿児島県"} 鹿児島県
                %option{value:"沖縄県"} 沖縄県

              .form-group
                = f.label "市区町村"
                %span.form-require 必須
                = f.text_field :city, autofocus: true,class:"input-default",placeholder: "例)埼玉県久喜市" 

              .form-group
                = f.label "番地"
                %span.form-require 必須
                = f.text_field :house_number, autofocus: true,class:"input-default",placeholder: "例)青山1-1-1" 

              .form-group
                = f.label "建物名"
                %span.form-require.any 任意
                = f.text_field :building, autofocus: true,class:"input-default",placeholder: "例)森ビル3103"  

              .form-group
                = f.label "電話番号"
                %span.form-require.any 任意
                = f.text_field :phone_number, autofocus: true,class:"input-default",placeholder: "例)08012345678"  
              = f.submit "次へ進む", class: "btn-default btn-red"


  = render partial:"devise/footer"